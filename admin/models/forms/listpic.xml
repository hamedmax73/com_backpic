<?xml version="1.0" encoding="utf-8"?>
<form
				addrulepath="/administrator/components/com_backpic/models/rules"
>
				<fieldset
				name="details"
				label="COM_BACKPIC_TEACHER_DETAILS"
				>
				<field
				name="id"
				type="hidden"
				/>
				<field
				name="name"
				type="text"
				label="تیتر"
				description="COM_BACKPIC_TEACHER_NAME_DESC"
				size="40"
				class="inputbox"
				validate="greeting"
				required="true"
				default=""
				/>

				<field
				name="pic"
				type="media"
				label="تصویر بک گراند"
				description="COM_BACKPIC_TEACHER_AVATAR_DESC"
				 />

				<field
				name="article_id"
				type="text"
				label="شناسه مطالب"
				description="COM_BACKPIC_TEACHER_NAME_DESC"
				size="40"
				class="inputbox"
				validate="greeting"
				required="true"
				default=""
				/>
    				<field
				name="width"
				type="text"
				label="عرض"
				description="COM_BACKPIC_TEACHER_EMAIL_DESC" 
				size="60"
				class="inputbox"
				default=""
				/>
				<field
				name="height"
				type="text"
				label="ارتفاع"
				description="COM_BACKPIC_TEACHER_CALLNUMBER_DESC" 
				size="12"
				class="inputbox"
				default=""
				/>
				<field 
				    name="type"
				    type="list"
				    class="inputbox" 
				    default="" 
				    label="نوع"
				    required="true" >
				    	<option value="1">جوملا</option>
  					<option value="2">کی ۲</option>
  					<option value="3">ایزی بلاگ</option>
    				</field>
    				<field 
    					name="custom" 
    					type="textarea" 
    					default="default" 
    					label="وارد کردن کد css" 
    					description="" 
    					rows="10" 
    					cols="5" />

	    				<field 
	    					name="template_name"
	    					type="sql"
	    					multiple="false"
	    					query="SELECT template AS value, title AS template_name FROM #__template_styles"
	    					class="inputbox" 
	    					default="" 
	    					label="انتخاب قالب"
	    					required="false" >
				    <option value="0">انتخاب قالب</option>
	  
	    			</field>


				</fieldset>
</form>
